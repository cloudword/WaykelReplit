# Waykel Environment Configuration
# Copy this file to .env.development, .env.staging, or .env.production

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/waykel

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# ============================================
# AUTHENTICATION (Optional)
# ============================================
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here

# ============================================
# PAYMENT INTEGRATION (Optional)
# ============================================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx

# Razorpay
RAZORPAY_KEY_ID=rzp_test_xxx
RAZORPAY_KEY_SECRET=xxx

# ============================================
# GOOGLE MAPS (Optional)
# ============================================
GOOGLE_MAPS_API_KEY=xxx

# ============================================
# PUSH NOTIFICATIONS (Optional)
# ============================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=xxx
FCM_SENDER_ID=xxx

# Apple Push Notification Service
APNS_KEY_ID=xxx
APNS_TEAM_ID=xxx
APNS_KEY_PATH=./AuthKey.p8

# ============================================
# FILE STORAGE (Optional)
# ============================================
AWS_S3_BUCKET=waykel-uploads
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=ap-south-1

# ============================================
# LOGGING & MONITORING (Optional)
# ============================================
SENTRY_DSN=xxx
LOG_LEVEL=debug
